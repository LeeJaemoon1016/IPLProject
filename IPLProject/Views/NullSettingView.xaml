<UserControl x:Class="IPLProject.Views.NullSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:IPLProject.ViewModels"
             xmlns:local="clr-namespace:IPLProject.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="1000">

    <UserControl.DataContext>
        <viewModel:NullSettingViewModel/>
    </UserControl.DataContext>

    <Grid>
        <TextBlock Text="Available only as an Administrator Account."
                               Foreground="LightGray"
                               FontSize="30"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,0,50"/>
    </Grid>
</UserControl>
